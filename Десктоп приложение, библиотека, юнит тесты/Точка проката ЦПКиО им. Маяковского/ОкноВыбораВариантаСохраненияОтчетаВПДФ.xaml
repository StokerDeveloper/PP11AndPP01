<Window x:Class="Точка_проката_ЦПКиО_им._Маяковского.ОкноВыбораВариантаСохраненияОтчетаВПДФ"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Точка_проката_ЦПКиО_им._Маяковского"
        mc:Ignorable="d"
        Title="Выбор варианта сохранения отчета" FontFamily="Comic Sans MS" Height="180" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="60*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <RadioButton Name="вариант1" Content="Таблица" FontSize="16" Margin="10,10,0,0" DockPanel.Dock="Top" IsChecked="True"/>
            <RadioButton Name="вариант2" Content="График" FontSize="16" Margin="10,10,0,0" DockPanel.Dock="Top"/>
            <RadioButton Name="вариант3" Content="Таблица и график" FontSize="16" Margin="10,10,0,0" DockPanel.Dock="Top"/>
        </DockPanel>

        <Button Content="Отмена" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" IsCancel="True"/>
        <Button Content="Подтвердить" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" Click="Button_Click"/>
    </Grid>
</Window>
